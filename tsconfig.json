{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2018",
    "sourceMap": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": "./",
    "skipLibCheck": true,
  },
  "exclude": [
    "./node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
